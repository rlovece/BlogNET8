@model BlogNET8.Models.MsjContact

@{
	ViewData["Title"] = "Contacto";
}

<h1 class="text-center mt-3">@ViewData["Title"]</h1>



<div class="row">
    <div class="col-md-6 offset-3">
        <section>
			<form id="account" method="POST" asp-controller="ContactClient" asp-action="Create">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Name" class="form-control" placeholder="Ingrese su Nombre" />
					<label asp-for="Name" class="form-label">Nombre</label>
					<span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LastName" class="form-control" placeholder="Ingrese su Apellido" />
					<label asp-for="LastName" class="form-label">Apellido</label>
					<span asp-validation-for="LastName" class="text-danger"></span>
                </div>
				<div class="form-floating mb-3">
					<input asp-for="Email" class="form-control" placeholder="Ingrese su Email" />
					<label asp-for="Email" class="form-label">Email</label>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-floating mb-3">
					<input asp-for="Message" class="form-control" placeholder="Ingrese su Mensaje" />
					<label asp-for="Message" class="form-label">Mensaje</label>
					<span asp-validation-for="Message" class="text-danger"></span>
				</div>
				<div>
					<button type="submit" class="w-100 btn btn-lg btn-primary">Enviar</button>
				</div>
                @* <div>
					<button type="submit" class="btn btn-primary from-control">Enviar</button>
                </div>
                 *@
            </form>
        </section>
    </div>
</div>
