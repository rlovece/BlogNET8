
@model IEnumerable<BlogNET8.Models.ApplicationUser>

@{
	ViewData["Title"] = "Usuarios";

}


<div class="conteiner mt-4">

	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Usuarios</h2>
		</div>
		<div class="col-4 text-rigth">
			<a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo usuario</a>
		</div>
	</div>


		<table id="tblArticles" class="table table-bordered table-striped" style="width: 100%">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(m => m.Id)</th>
					<th>@Html.DisplayNameFor(m => m.Name)</th>
					<th>@Html.DisplayNameFor(m => m.LastName)</th>
					<th>@Html.DisplayNameFor(m => m.Email)</th>
					<th>Acciones</th>
				</tr>
			</thead>
			<tbody>
			@foreach (var user in Model)
			{
				<tr>
					<th>@Html.DisplayFor(m => user.Id)</th>
					<th>@Html.DisplayFor(m => user.Name)</th>
					<th>@Html.DisplayFor(m => user.LastName)</th>
					<th>@Html.DisplayFor(m => user.Email)</th>
					<th>
						@if (user.LockoutEnd == null || user.LockoutEnd < DateTime.Now)
						{
							<a asp-action="BlockUser" class="btn btn-primary" asp-route-id="@user.Id"><i class="fa fa-unlock" aria-hidden="true"></i></a>
						}
						else
						{
							<a asp-action="UnblockUser" class="btn btn-danger" asp-route-id="@user.Id"><i class="fa fa-ban" aria-hidden="true"></i>
							</a>
						}
					</th>
				</tr>
			}
		</tbody>
		</table>

</div>
