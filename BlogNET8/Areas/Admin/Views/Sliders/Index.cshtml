@{
	ViewData["Title"] = "Sliders";

}


<div class="conteiner mt-4">

	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Sliders</h2>
		</div>
		<div class="col-4 text-rigth">
			<a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Nuevo Slider</a>
		</div>
	</div>
	<table id="tblSliders" class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Visible</th>
				<th>Imagen</th>
				<th>Acciones</th>
			</tr>
		</thead>
	</table>

</div>

@section Scripts {
	<script src="~/js/sliders.js"></script>
}