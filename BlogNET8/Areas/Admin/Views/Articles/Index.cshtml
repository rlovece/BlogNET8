@{
	ViewData["Title"] = "Artículos";

}


<div class="conteiner mt-4">

	<div class="row">
		<div class="col-8">
			<h2 class="text-primary">Lista de Artículos</h2>
		</div>
		<div class="col-4 text-rigth">
			<a asp-action="Create" class="btn btn-primary"><i class="fa fa-plus" aria-hidden="true"></i> Nueva Artículo</a>
		</div>
	</div>
	<table id="tblArticles" class="table table-bordered table-striped" style="width: 100%">
		<thead>
			<tr>
				<th>Id</th>
				<th>Título</th>
				<th>F. Creación</th>
				<th>Útilma modificiación</th>
				<th>Categoría</th>
				<th>Acciones</th>
			</tr>
		</thead>
	</table>

</div>

@section Scripts {
	<script src="~/js/articles.js"></script>
}